<?xml version="1.0" encoding="utf-8"?>  
<shape xmlns:android="http://schemas.android.com/apk/res/android"  
    android:shape="rectangle">  
    
    <!-- 颜色渐变设置 -->
    <gradient  
        android:startColor="#CA8EFF"
        android:endColor="#CA8EFF"  
        android:angle="45"/>  
        
    <!-- 内容与边框的距离 -->
    <padding 
        android:left="4dp"  
        android:top="4dp"  
        android:right="4dp"  
        android:bottom="4dp" />  
        
    <!-- 设置圆角 -->
    <corners 
        android:radius="15dp" />  
        
    <!-- 设置大小 
    <size  
        android:height="80dp"  
        />  
        -->
    <!-- 设置描边 -->
    <stroke   
        android:width="2dp"  
        android:color="#eeeeee"    
        />   
</shape>  